{% extends 'base.html.twig' %}

{% block title %}CV{% endblock %}

{% block body %}
    <h3 class="text-center">Mon Cv</h3>
{% if c_v %}
    <div class="col-10 row mx-auto">
        <div class="col-2">
            <a class="btn btn-info" href="{{ path('c_v_edit', {'id': c_v.id}) }}">Modifier</a>
        </div>
        <div class="col-2">
            {{ include('cv/_delete_form.html.twig') }}
        </div>

    </div>
    <!--<a href="{{ path('c_v_index') }}">back to list</a>-->


    <div class=" col-10 mx-auto">
    <table class="table ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ c_v.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ c_v.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ c_v.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ c_v.age }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ c_v.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ c_v.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ c_v.telephone }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ c_v.specialite }}</td>
            </tr>
            <tr>
                <th>NiveauEtude</th>
                <td>{{ c_v.niveauEtude }}</td>
            </tr>
            <tr>
                <th>ExperienceProfessionnelle</th>
                <td>{{ c_v.experienceProfessionnelle }}</td>
            </tr>
        </tbody>
    </table>
    </div>


    {% else %}
    <h3>Vous n'avez pas encore de cv ! Cliquez <a  href="{{path('c_v_new')}}" >ici</a> pour en creer un nouveau !</h3>
    {% endif %}

{% endblock %}
